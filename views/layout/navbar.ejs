 <!DOCTYPE html>
 <html lang="en">
 <head>
     <meta charset="UTF-8">
     <meta name="viewport" content="width=device-width, initial-scale=1.0">
     <title>Navbar Example</title>
     <link href="/css/output.css" rel="stylesheet"> <!-- Adjust the path to your CSS file -->
 </head>
 <body>
     <nav class="w-full bg-white border-b sticky top-0 z-40">
         <!-- Header -->
         <div id="header" class="p-4">
             <div class="flex flex-row items-center space-x-4">
                 <a href="index.php">
                     <img src="/assets/icon1.jpg" width="13" height="19" alt="Icon 1">
                 </a>
                 <a href="index.php?link=aboutus">
                     <img src="/assets/icon2.jpg" width="12" height="19" style="margin: 0 15px;" alt="Icon 2">
                 </a>
                 <a href="index.php?link=contact">
                     <img src="/assets/icon3.jpg" width="13" height="19" alt="Icon 3">
                 </a>
             </div>
             <%= formattedDate %>
         </div>
 
         <div class="bg-blue-900 w-full">
             <!-- Logo -->
             <div id="logo">
                 <p class="text-2xl font-bold text-white text-center py-2">Mabridge</p>
             </div>
 
             <div id="navbarItems" class="w-full md:w-[80%] md:mx-auto pb-1 md:pb-0">
                 <div class="flex items-center justify-end md:justify-normal h-full mr-3 md:mx-0">
                     <!-- Desktop Navigation -->
                     <div class="hidden md:flex items-center justify-between">
                         <% navItems.forEach(function(item) { %>
                             <a id="navbarItem" href="<%= item.href %>" class="flex items-center h-full md:px-4 lg:px-6 py-3 text-white hover:text-blue-300 hover:bg-blue-700 transition-colors">
                                 <%= item.name %>
                             </a>
                         <% }) %>
                     </div>
 
                     <!-- Mobile menu button -->
                     <div class="md:hidden">
                         <button id="menu-button" class="inline-flex items-center justify-center p-1 rounded-md text-white border border-gray-100 hover:bg-blue-600 focus:outline-none">
                             <svg id="menu-icon" class="h-7 w-7" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                 <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
                             </svg>
                         </button>
                     </div>
                 </div>
             </div>
         </div>
 
         <!-- Mobile Navigation -->
         <div id="nav-menu" class="fixed left-0 top-0 transform -translate-x-full transition-transform duration-200 ease-in-out z-50 w-64 h-full bg-gray-50">
             <div class="flex justify-end bg-blue-600">
                 <button id="close-button" class="text-white py-2 rounded-md">
                     <svg class="h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                         <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6L2 12L10 18"></path>
                     </svg>
                 </button>
             </div>
             <div class="flex flex-col">
                 <% navItems.forEach(function(item, index) { %>
                     <a href="<%= item.href %>" class="block text-gray-900 hover:bg-blue-600 transition-colors px-4 py-3 border-b border-gray-300 <%= (index === navItems.length - 1) ? 'last-item' : '' %>">
                         <%= item.name %>
                     </a>
                 <% }) %>
             </div>
         </div>
 
         <!-- Overlay for mobile -->
         <div id="nav-overlay" class="fixed inset-0 bg-black opacity-70 z-40 hidden md:hidden"></div>
     </nav>
 
     <!-- Scripts -->
     <script>
         document.getElementById('menu-button').addEventListener('click', function() {
             var menu = document.getElementById('nav-menu');
             var overlay = document.getElementById('nav-overlay');
             menu.classList.toggle('-translate-x-full');
             overlay.classList.toggle('hidden');
         });
 
         document.getElementById('close-button').addEventListener('click', function() {
             var menu = document.getElementById('nav-menu');
             var overlay = document.getElementById('nav-overlay');
             if (!menu.classList.contains('-translate-x-full')) {
                 menu.classList.add('-translate-x-full');
                 overlay.classList.add('hidden');
             }
         });
 
         // Close the menu when clicking outside of it
         document.addEventListener('click', function(event) {
             var menu = document.getElementById('nav-menu');
             var menuButton = document.getElementById('menu-button');
             var overlay = document.getElementById('nav-overlay');
             var closeButton = document.getElementById('close-button');
             if (!menu.contains(event.target) && !menuButton.contains(event.target) && !closeButton.contains(event.target)) {
                 if (!menu.classList.contains('-translate-x-full')) {
                     menu.classList.add('-translate-x-full');
                     overlay.classList.add('hidden');
                 }
             }
         });
 
         // Log to verify if the button is clickable
         document.getElementById('menu-button').addEventListener('click', function() {
             console.log('Menu button clicked');
         });
     </script>
 
     <!-- Style for last-item to ensure no bottom border -->
     <style>
         .last-item {
             border-bottom: 0;
         }
     </style>
 </body>
 </html>
 