  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.css" />
  <link rel="stylesheet" href="/styles/style.css">
  <title>Custom Banner Slider</title>
</head>
<body>

  <!-- navbar -->
  <div id="wrapper">
    <div id="header">
